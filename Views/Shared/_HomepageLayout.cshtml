        }

        #infinityprintstxt {
            margin-bottom: 20px;
        }

        @@media only screen and (max-width: 768px) {
            #greet {
                font-weight: bold;
                font-size: 30px;
                color: black;
            }

            #infinity2 {
                margin-left: 10px;
                font-weight: bold;
                font-size: 30px;
                color: #6f0d4a;
            }

            #prints2 {
                font-weight: bold;
                font-size: 30px;
                color: black;
            }
        }

        #row-greet {
            margin-bottom: 0px;
        }

        #servicesTxt, #feedbacksTxt {
            margin-top: 50px;
        }

        #services-section, #feedbacks-section {
            margin-top: 20px;
            padding-left: 20px;
            padding-right: 20px;
        }

        .card {
            border-radius: 15px; /* Smooth corners */
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Lighter shadow */
            transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transitions */
            background: #fff; /* Clean white background */
            border: 1px solid #e0e0e0; /* Subtle border */
        }

            .card:hover {
                transform: scale(1.03); /* Slight scaling effect */
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15); /* Subtle emphasis on hover */
            }

        .card-image img, .card-feedback-image img {
            width: 100%;
            height: auto; /* Maintain aspect ratio for responsiveness */
            display: block;
            object-fit: cover; /* Ensure the image covers the container */
            aspect-ratio: 16 / 9; /* Balanced aspect ratio */
        }

        .card-content {
            padding: 20px; /* Comfortable spacing */
            color: #333; /* Neutral text color */
            font-family: 'Arial', sans-serif; /* Clean, modern font */
            line-height: 1.6; /* Improved readability */
        }

        .card-title {
            font-size: 1.5rem; /* Slightly larger for prominence */
            font-weight: 600; /* Bold for titles */
            margin-bottom: 10px;
            color: #2c3e50; /* Professional blue-gray tone */
        }

        .card-description {
            font-size: 1rem; /* Standard text size */
            color: #7f8c8d; /* Softer text color for secondary content */
        }

        .card-actions {
            margin-top: 15px;
            display: flex;
            justify-content: flex-end; /* Align actions to the right */
            gap: 10px; /* Spacing between buttons/links */
        }

            .card-actions button, .card-actions a {
                padding: 10px 15px;
                border-radius: 5px;
                background: #3498db; /* Vibrant primary color */
                color: #fff;
                border: none;
                cursor: pointer;
                text-decoration: none;
                transition: background 0.3s ease;
            }

                .card-actions button:hover, .card-actions a:hover {
                    background: #2980b9; /* Slightly darker hover effect */
                }


        .service-title, .rating-title {
            font-weight: bold;
            color: #800000;
            text-align: center;
            margin-bottom: 10px;
        }




        .service-rating {
            font-weight: bold;
            color: #800000;
            text-align: left;
            margin-left: 10px;
            margin-bottom: 10px;
        }

        #custfeedbacks {
            text-align: center;
        }


        .view-more-section {
            text-align: center;
            margin-top: 30px;
            margin-bottom: 50px
        }


        .view-more-link {
            color: #800000;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            transition: color 0.3s ease;
            cursor: pointer;
        }

            .view-more-link:hover {
                color: #a00000;
                text-decoration: underline;
            }

        .chat-section {
            text-align: right;
            margin-right: 40px;
        }

        .chat-button {
            background-color: #800040;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 8px; /* Space between image and text */
        }

            .chat-button:hover, .chat-button:focus {
                background-color: #600030;
            }

        .chat-icon {
            width: 30px;
            height: 30px;
        }

        .aboutUs-section {
            padding-left: 50px;
            padding-right: 50px;
            margin-bottom: 50px
        }

        .history-section {
            padding-left: 50px;
            padding-right: 50px;
        }

        #historyTxt {
            text-align: center;
            font-weight: bold;
            font-size: 40px;
            color: #6f0d4a;
        }


        footer {
            background-color: #f8f8f8;
            padding: 20px;
            border-top: 1px solid #ddd;
            overflow: hidden;
            position: relative;
        }



        .footer-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 15px;
        }

        .footer-logo {
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

            .footer-logo img {
                width: 200px;
                height: auto;
            }


        .footer-nav {
            margin-top: 15px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
        }

        .footer-divider {
            display: none;
        }

        .footer-links {
            justify-content: center;
            display: flex;
            flex-wrap: wrap;
            margin-top: 10px;
            gap: 10px;
        }

            .footer-links a {
                margin: 5px;
                text-align: center;
                display: inline-block;
            }

        .footer-social {
            margin-top: 10px;
            text-align: center;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

            .footer-social a img {
                width: 30px;
                height: auto;
            }

        .footer-tagline {
            margin-top: 10px;
            font-size: 14px;
            text-align: center;
        }


        .footer-contact {
            margin-top: 15px;
            text-align: center;
            font-size: 14px;
            word-wrap: break-word;
            display: flex;
            flex-direction: column;
            align-items: center;
        }


        @@media (max-width: 1004px) {
            .footer-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 15px;
            }

            .footer-logo img {
                width: 150px;
                height: auto;
            }

            .footer-nav, .footer-contact {
                width: 100%;
            }

            .footer-links {
                flex-direction: column;
                gap: 10px;
            }

            .footer-social {
                flex-direction: row;
                gap: 10px;
            }

            .row .col.s3 {
                width: 100% !important;
                left: auto !important;
                right: auto !important;
            }

            .row .col.s4 {
                width: 100% !important;
                left: auto !important;
                right: auto !important;
            }

            .col-divider, .col-divider1 {
                border-left: none !important;
                border-bottom: 3px solid #000;
                width: 80%;
                margin-left: 40px;
                height: auto !important;
            }

            body {
                padding-left: 0 !important;
                padding-right: 0 !important;
            }
        }



        .modal {
            display: none;
            position: fixed;
            z-index: 2;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            width: 50%;
            height: 100%;
            background: transparent; /* No background */
            border-radius: 10px;
        }

        .modal-content {
            background-color: white; /* Keep content background */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); /* Add slight shadow */
            text-align: center;
            width: 100%;
            position: relative;
            box-sizing: border-box;
        }


        /* Card container for Terms & Conditions */
        .terms-card {
            background-color: white;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            margin-top: 20px;
            max-width: 100%;
            overflow-y: hidden;
            text-align: start;
        }

        .terms-header {
            background-color: #6f0d4a;
            color: white;
            padding: 15px;
            border-radius: 8px 8px 0 0;
            text-align: center;
        }

            .terms-header h2 {
                font-size: 35px
            }


        .close {
            position: absolute;
            top: 5px;
            right: 10px;
            font-size: 20px;
            cursor: pointer;
        }

        /* Styling the label */
        .checkbox-container label {
            cursor: pointer;
        }

        .checkbox-container span {
            color: blue;
            text-decoration: underline;
        }


        /* Responsive adjustments for modal*/
        @@media (max-width: 768px) {
            .modal {
                display: none;
                position: fixed;
                z-index: 2;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
                width: 300px;
                height: 70%;
                background: transparent;
                border-radius: 10px;
            }

            terms-header h2 {
                font-size: 35px;
                line-height: 110%;
                margin: 15.373333rem 0 1.424rem 0;
            }
        }
    </style>
