<body ng-app="InfinityPrints" ng-controller="IPController">
    <style>
        body {
            padding-left: 40px;
            padding-right: 40px;
        }

        body {
            font-family: 'Poppins', sans-serif !important;
        }

        .row {
            margin-bottom: 0;
        }

        nav {
            background-color: white;
            box-shadow: none;
            outline: none;
            border-bottom: 2px solid #6f0d4a;
        }

        .nav-content {
            width: 100%;
            overflow: hidden;
        }

            .nav-content .tabs {
                display: flex;
                justify-content: space-evenly;
                width: 100%;
                padding-left: 0px;
                margin-right: 0;
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
                white-space: nowrap;
            }

                .nav-content .tabs .tab {
                    flex-shrink: 0;
                    text-align: center;
                }

                    .nav-content .tabs .tab a {
                        display: block;
                        padding: 10px 0;
                        font-size: 17px;
                        color: #6f0d4a !important;
                    }

                        .nav-content .tabs .tab a:hover,
                        .nav-content .tabs .tab a:focus {
                            transform: scale(1.1);
                            transition: transform 0.1s ease;
                            /*                            border-bottom: solid; */
                            font-weight: bold;
                        }

                        .nav-content .tabs .tab a.active {
                            font-weight: bold;
                            transform: scale(1.1);
                        }

                        .nav-content .tabs .tab a:hover {
                            transform: scale(1.1);
                        }

        .tab.disabled a {
            pointer-events: none;
            cursor: default;
            text-decoration: none;
            opacity: 0.6; /* Optional: Make it look more disabled */
        }



        @@media (max-width: 768px) {
            .nav-content .tabs {
                flex-wrap: nowrap;
                -webkit-overflow-scrolling: touch;
                justify-content: flex-start;
            }

                .nav-content .tabs .tab {
                    flex-grow: 0;
                    min-width: 120px;
                }
        }


        #infinity {
            margin-left: 10px;
            font-weight: bold;
            font-size: 40px;
            color: #6f0d4a;
        }

        #prints {
            font-weight: bold;
            font-size: 40px;
            color: black;
        }

        #signIn {
            margin-right: 20px;
            font-size: 20px;
            color: black;
        }

        #txtuser {
            font-weight: bold;
            font-size: 20px;
            color: #6f0d4a;
            font-size: 25px;
        }

        #user {
            font-weight: bold;
            font-size: 20px;
            color: black;
            font-size: 25px;
        }

        #txtSign {
            margin-left: 40px;
            margin-right: 50px;
            margin-top: 40px;
            font-weight: bold;
        }

        .input-icons {
            width: 100%;
            margin-bottom: 20px;
            color: #6f0d4a;
            position: relative;
        }

            .input-icons i {
                position: absolute;
            }

        .input-icon {
            padding: 10px;
            min-width: 40px;
        }

        .input-icon-right {
            padding: 10px;
            right: 0%;
            cursor: pointer;
        }
        /*
        .input-icon-right2 {
            padding: 10px;
            right: 2%;
            cursor: pointer;

        }*/

        .input-icon-right2 {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
        }



        #email, #pass {
            width: 100%;
            padding: 10px 40px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        #fname, #lname, #phone, #email2, #uname, #pass2, #confpass {
            padding: 10px 40px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            width: 100%;
        }


        .button-container {
            text-align: center;
            margin-top: 20px;
            width: 90%;
        }

        .button-container2 {
            text-align: center;
            width: 100%;
        }

        .checkbox-container {
            text-align: center;
            width: 100%;
        }

        .check:focus {
            accent-color: rebeccapurple;
            color: black;
        }

        #terms {
            font-size: 14px;
            margin-bottom: 10px;
            color: black;
        }

        .btn, .btn-signup, .btn:focus {
            border-radius: 50px;
            background-color: #ac7b99;
            width: 100px;
            height: 35px;
            text-transform: capitalize;
            font-family: 'Trebuchet MS';
            text-align: center;
        }

            .btn:hover {
                background-color: #6f0d4a;
            }

        .resetpass {
            text-align: center;
            width: 90%;
        }

        .reset {
            font-size: 13px;
        }


        .col-divider {
            border-left: 3px solid #000;
            height: 500px;
        }

        .col-divider1 {
            border-right: 3px solid #000;
            height: 500px;
        }


        @@media only screen and (max-width: 768px) {
            body {
                padding-left: 10px;
                padding-right: 10px;
            }

            .col.s5, .col.s6 {
                flex: 0 0 100%;
                max-width: 100%;
                margin-left: 0;
                margin-right: 0;
            }

            .col {
                border-left: none !important;
            }

            .col-divider, .col-divider1 {
                border-left: none !important;
                border-bottom: 3px solid #000;
                width: 80%;
                margin-left: 40px;
                height: auto !important;
            }


            .input-field {
                width: 100%;
                padding: 10px 40px;
                box-sizing: border-box;
            }

            .helper-text {
                font-size: 0.75rem;
                padding-left: 20px;
                top: 110%;
                left: 0;
                visibility: hidden;
            }

            .input-field.ng-invalid.ng-touched + .helper-text {
                visibility: visible;
            }

            .input-icons {
                margin-bottom: 30px;
            }

            #infinity {
                margin-left: 10px;
                font-weight: bold;
                font-size: 40px;
                color: #6f0d4a;
            }

            #prints {
                margin-left: 10px;
                font-weight: bold;
                font-size: 40px;
                color: black;
            }
        }

        .helper-text {
            font-size: 9.4px;
            position: absolute;
            color: #ff5722;
            /*    visibility: hidden;*/
            top: 100%;
            left: 0;
            padding-left: 15px;
        }

        .input-field.ng-invalid.ng-touched + .helper-text {
            visibility: visible;
        }

        #homeimg {
            width: 100%;
            padding-left: 3vh;
            padding-right: 3vh;
        }

        #greet {
            font-weight: bold;
