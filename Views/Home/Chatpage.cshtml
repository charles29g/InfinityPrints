@{
    Layout = "~/Views/Shared/_HomepageLayout.cshtml";
}

<style>

    .back-btn {
        position: fixed;
        bottom: 20px;
        left: 20px;
        background: linear-gradient(135deg, #6f0d4a, #9b135f);
        color: white;
        border-radius: 30px;
        font-size: 16px;
        padding: 12px 24px;
        text-decoration: none;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: 4px 6px 10px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease-in-out;
        cursor: pointer;
    }

        .back-btn i {
            font-size: 20px;
        }

        .back-btn:hover {
            background: linear-gradient(135deg, #9b135f, #6f0d4a);
            transform: scale(1.1);
            box-shadow: 6px 8px 12px rgba(0, 0, 0, 0.4);
        }

    #homeimg {
        width: 100%;
        height: 500px
    }

    h3{
        text-align:center;
        margin-top:100px
    }

    .container {
        margin-top: 50px;
        margin-bottom:50px;
    }

    h5 {
        color: #8B5E3C; 
        font-weight: 600;
/*        margin-top:60px*/
    }

    a {
        color: #a00062;
    }

    #image1{
        width:100%;
        height:300px;
    }

    ul{
        padding-top:0px !important;
    }

    .chat-container{
        border:1px solid black;
        width:100%;
        height:500px;
        border-radius:50px;
        margin-bottom:100px
    }

    .top-bar {
        height: 50px;
        border: 1px solid black;
        border-top-left-radius: 50px;
        border-top-right-radius: 50px;
        border-top: none;
        border-right: none;
        border-left: none;
        background-color: #6f0d4a
    }
</style>

