    .chat-container {
        border: 1px solid black;
        width: 90%; /* Prevents it from being too wide */
        max-width: 600px; /* Keeps it mobile-friendly */
        height: 500px;
        border-radius: 20px; /* Adjusted to be smoother */
        margin: 0 auto 100px auto; /* Centers it */
        display: flex;
        flex-direction: column;
        background-color: #f5f5f5;
        overflow: hidden;
    }

    .top-bar {
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 15px;
        color: white;
        font-weight: bold;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        background-color: #6f0d4a;
    }

    .chat-messages {
        flex: 1;
        padding: 15px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .message {
        max-width: 75%;
        padding: 12px 15px;
        border-radius: 15px;
        font-size: 14px;
        position: relative;
        word-wrap: break-word;
    }

        .message.received {
            background-color: #e0e0e0;
            align-self: flex-start;
            border-top-left-radius: 0;
        }

        .message.sent {
            background-color: #6f0d4a;
            color: white;
            align-self: flex-end;
            border-top-right-radius: 0;
        }

    /* Timestamp */
    .timestamp {
        display: block;
        font-size: 10px;
        text-align: right;
        opacity: 0.6;
        margin-top: 5px;
    }

    .chat-input {
        display: flex;
        align-items: center;
        padding: 15px;
        background: white;
        border-top: 1px solid black;
        border-bottom-left-radius: 20px;
        border-bottom-right-radius: 20px;
    }

        .chat-input input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 20px;
            outline: none;
            font-size: 14px;
        }

        .chat-input button {
            background: #6f0d4a;
            border: none;
            color: white;
            padding: 10px;
            margin-left: 5px;
            margin-right: 5px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    /* Fix Scrollbar */
    .chat-messages::-webkit-scrollbar {
        width: 5px;
    }

    .chat-messages::-webkit-scrollbar-thumb {
        background: #6f0d4a;
        border-radius: 10px;
    }

    .chat-messages::-webkit-scrollbar-track {
        background: #f5f5f5;
    }

    .nav{
        padding:40px;
        display:flex;
        justify-content:center;
    }

