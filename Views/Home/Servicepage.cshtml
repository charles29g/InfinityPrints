        background-color: white; /* Ensure background is white */
        font-size: 14px; /* Set font size */
    }

        #Service option:disabled {
            color: #999; /* Gray out the text */
        }

    .button1 {
        width: 100%; /* Full width for consistency */
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #6f0d4a;
        color: white;
        font-size: 14px;
        cursor: pointer;
    }

    button:hover {
        background-color: #850f5a !important; /* Slightly darker magenta for hover */
    }

    button:active {
        background-color: #6f0d4a !important; /* Keep original magenta for active state */
    }

    button:focus {
        outline: none; /* Disable focus outline */
        background-color: #6f0d4a; /* Same magenta color to prevent unwanted changes */
    }

    .input-field {
        width: 100%; /* Make input fields take full width */
        padding: 10px; /* Add padding for better spacing */
        border: 1px solid #ccc; /* Add consistent border */
        border-radius: 5px; /* Rounded corners */
        margin: 10px 0; /* Add spacing between fields */
        font-size: 14px; /* Set consistent font size */
    }


    .file-upload {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    .custom-file-upload {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
        color: #7b2857; /* Custom purple color */
        font-weight: bold;
        text-align: center;
        width: 100%;
        transition: background-color 0.3s;
        margin-bottom: 2vh;
    }

        .custom-file-upload:hover {
            background-color: #f3e5f5;
        }

    .upload-icon {
        margin-right: 10px;
        color: #7b2857; /* Custom purple color */
    }

    #file-upload {
        display: none;
    }

    /* Center the "Upload Image" Box */
    .image-preview {
        margin: 0 auto; /* Center the image preview box horizontally */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .preview-container {
        width: 200px; /* Square size */
        height: 200px; /* Square size */
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
        position: relative;
        margin-bottom: 20px; /* Add spacing between preview and upload button */
    }

    .placeholder-text {
        color: #999;
        font-size: 16px;
        text-align: center;
        position: absolute;
        z-index: 1;
        pointer-events: none;
    }

    .preview-img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures the image fills the square container while maintaining aspect ratio */
        position: relative;
        z-index: 2;
    }

    .close-button {
        position: absolute;
        top: 10px;
        right: 15px;
        background: none;
        border: none;
        font-size: 20px;
        font-weight: bold;
        cursor: pointer;
        color: #555;
        transition: color 0.2s ease-in-out;
    }



    .centered-container {
        position: fixed; /* Stays in the same position even when scrolling */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* Centers the container */
        width: 100%; /* Adjust based on your layout */
        height: auto; /* Ensure it adapts to content */
        display: flex;
        justify-content: center; /* Horizontal centering */
        align-items: center; /* Vertical centering */
        z-index: 1002; /* Ensure it overlaps other content */
        margin-top: 75px;
    }

    .update-container {
        position: fixed; /* Stays in the same position even when scrolling */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* Centers the container */
        width: 100%; /* Adjust based on your layout */
        height: auto; /* Ensure it adapts to content */
        display: flex;
        justify-content: center; /* Horizontal centering */
        align-items: center; /* Vertical centering */
        z-index: 10; /* Ensure it overlaps other content */
    }

    .size-container {
        position: fixed; /* Stays in the same position even when scrolling */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* Centers the container */
        width: 100%; /* Adjust based on your layout */
        height: auto; /* Ensure it adapts to content */
        display: flex;
        justify-content: center; /* Horizontal centering */
        align-items: center; /* Vertical centering */
        z-index: 10; /* Ensure it overlaps other content */
    }

    .container {
        background: white; /* Adds contrast if needed */
        border-radius: 12px; /* Rounded corners */
        padding: 20px; /* Adjust padding for better appearance */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Modern shadow effect */
        max-width: 600px; /* Optional, limits the width */
        width: 90%; /* Makes it responsive */
        position: relative;
    }



    /* Modern card styles */
    .modern-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #b08499; /* Light mauve color */
        border-radius: 16px;
        padding: 20px;
        width: 200px;
        height: 150px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        margin: auto;
        text-align: center;
    }

        .modern-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .modern-card-icon {
        background-color: #5e1849; /* Dark purple for the circle */
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
    }

        .modern-card-icon span {
            font-size: 24px;
            color: white;
            font-weight: bold;
        }

    .modern-card-content h5 {
        font-size: 18px;
        font-weight: 600;
        color: #000; /* Black text color */
    }



    .add-service-btn {
        background-color: white;
        color: black;
        font-size: 1.5em;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 100;
        outline: auto;
    }

        .add-service-btn:hover {
            background-color: #555;
        }

