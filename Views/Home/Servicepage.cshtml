<script>
    function closeContainer() {
        const container = document.querySelector('.centered-container');
        container.style.display = 'none'; // Hides the container
    }

    function openContainer() {
        const container = document.querySelector('.centered-container');
        container.style.display = 'block';
    }

    function closeUpdateService() {
        const container = document.querySelector('.update-container');
        container.style.display = 'none'; // Hides the container
    }

    function openUpdateService() {
        const container = document.querySelector('.update-container');
        container.style.display = 'block';
    }

    function closeAddSize() {
        const container = document.querySelector('.size-container');
        container.style.display = 'none'; // Hides the container
    }

    function openAddSize() {
        const container = document.querySelector('.size-container');
        container.style.display = 'block';
        closeUpdateService();
    }



    document.addEventListener("DOMContentLoaded", function () {
        const searchWrapper = document.querySelector(".search-wrapper");

        if (searchWrapper) {
            searchWrapper.classList.add("fade-in");
        }
    });


</script>
