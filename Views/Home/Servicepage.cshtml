    }


    /* Fade-in effect */
    .search-wrapper {
        text-align: center;
        margin-top: 20px;
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 1s ease-in-out, transform 1s ease-in-out;
    }

        /* When the page loads, make it fade in */
        .search-wrapper.fade-in {
            opacity: 1;
            transform: translateY(0);
        }

    .search-title {
        font-weight: bold;
        color: black;
        margin-top: 100px;
    }

    .search-container {
        position: relative;
        padding-left: 15px;
