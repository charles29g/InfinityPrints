@{
    Layout = "~/Views/Shared/_HomepageLayout.cshtml";
}

<style>

    #servicesTxt, #feedbacksTxt {
        margin-top: 50px;
    }

    #services-section, #feedbacks-section {
        margin-top: 20px;
        padding-left: 20px;
        padding-right: 20px;
    }

    .card {
        border-radius: 15px; /* Smooth corners */
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Lighter shadow */
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transitions */
        background: #fff; /* Clean white background */
        border: 1px solid #e0e0e0; /* Subtle border */
    }

        .card:hover {
            transform: scale(1.03); /* Slight scaling effect */
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15); /* Subtle emphasis on hover */
        }

    .card-image img, .card-feedback-image img {
        width: 100%;
        height: auto; /* Maintain aspect ratio for responsiveness */
        display: block;
        object-fit: cover; /* Ensure the image covers the container */
        aspect-ratio: 16 / 9; /* Balanced aspect ratio */
    }

    .card-content {
        padding: 20px; /* Comfortable spacing */
        color: #333; /* Neutral text color */
        font-family: 'Arial', sans-serif; /* Clean, modern font */
        line-height: 1.6; /* Improved readability */
    }

    .card-title {
        font-size: 1.5rem; /* Slightly larger for prominence */
        font-weight: 600; /* Bold for titles */
        margin-bottom: 10px;
        color: #2c3e50; /* Professional blue-gray tone */
    }

    .card-description {
        font-size: 1rem; /* Standard text size */
        color: #7f8c8d; /* Softer text color for secondary content */
    }

    .card-actions {
        margin-top: 15px;
        display: flex;
        justify-content: flex-end; /* Align actions to the right */
        gap: 10px; /* Spacing between buttons/links */
    }

        .card-actions button, .card-actions a {
            padding: 10px 15px;
            border-radius: 5px;
            background: #3498db; /* Vibrant primary color */
            color: #fff;
            border: none;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.3s ease;
        }

            .card-actions button:hover, .card-actions a:hover {
                background: #2980b9; /* Slightly darker hover effect */
            }


    .service-title, .rating-title {
        font-weight: bold;
        color: #800000;
        text-align: center;
        margin-bottom: 10px;
    }




    .service-rating {
        font-weight: bold;
        color: #800000;
        text-align: left;
        margin-left: 10px;
        margin-bottom: 10px;
    }

    #custfeedbacks {
        text-align: center;
    }


    .add-review-btn {
        background-color: white;
        color: black;
        font-size: 1.5em;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 100;
        outline: auto;
    }

        .add-review-btn:hover {
            background-color: #555;
        }

    .action-buttons {
        position: absolute;
        top: 10px;
        right: 10px;
        display: flex;
        gap: 5px;
    }

    .update-btn, .delete-btn {
        border: none;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        font-size: 16px;
        cursor: pointer;
    }

    .update-btn {
        background-color: blue;
        color: white;
    }

    .delete-btn {
        background-color: red;
        color: white;
    }

    .button1 {
        width: 100%; /* Full width for consistency */
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #6f0d4a;
        color: white;
        font-size: 14px;
        cursor: pointer;
    }

    button:hover {
        background-color: #850f5a !important; /* Slightly darker magenta for hover */
    }

    button:active {
        background-color: #6f0d4a !important; /* Keep original magenta for active state */
    }

    button:focus {
        outline: none; /* Disable focus outline */
        background-color: #6f0d4a; /* Same magenta color to prevent unwanted changes */
    }

    .input-field {
        width: 100%; /* Make input fields take full width */
        padding: 10px; /* Add padding for better spacing */
        border: 1px solid #ccc; /* Add consistent border */
        border-radius: 5px; /* Rounded corners */
        margin: 10px 0; /* Add spacing between fields */
        font-size: 14px; /* Set consistent font size */
    }


    .file-upload {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    .custom-file-upload {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
        color: #7b2857; /* Custom purple color */
        font-weight: bold;
        text-align: center;
        width: 100%;
        transition: background-color 0.3s;
        margin-bottom: 2vh;
    }

        .custom-file-upload:hover {
            background-color: #f3e5f5;
        }

    .upload-icon {
        margin-right: 10px;
        color: #7b2857; /* Custom purple color */
    }

    #file-upload {
        display: none;
    }

    /* Center the "Upload Image" Box */
    .image-preview {
        margin: 0 auto; /* Center the image preview box horizontally */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .preview-container {
        width: 200px; /* Square size */
        height: 200px; /* Square size */
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
        position: relative;
        margin-bottom: 20px; /* Add spacing between preview and upload button */
    }

    .placeholder-text {
        color: #999;
        font-size: 16px;
        text-align: center;
        position: absolute;
        z-index: 1;
        pointer-events: none;
    }

    .preview-img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures the image fills the square container while maintaining aspect ratio */
        position: relative;
        z-index: 2;
    }

    .close-button {
        position: absolute;
        top: 10px;
        right: 15px;
        background: none;
        border: none;
        font-size: 20px;
        font-weight: bold;
        cursor: pointer;
        color: #555;
        transition: color 0.2s ease-in-out;
    }



    .centered-container {
        position: fixed; /* Stays in the same position even when scrolling */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* Centers the container */
        width: 100%; /* Adjust based on your layout */
        height: auto; /* Ensure it adapts to content */
        display: flex;
        justify-content: center; /* Horizontal centering */
        align-items: center; /* Vertical centering */
        z-index: 10; /* Ensure it overlaps other content */
    }

    .centered-container2 {
        position: fixed !important;
        top: 50% !important;
        left: 50% !important;
        transform: translate(-50%, -50%) !important;
        width: 100% !important;
        height: auto !important;
        display: none;
        justify-content: center !important;
        align-items: center !important;
        z-index: 11 !important;
    }

        .centered-container2.show {
            display: flex !important; /* Show the container when 'show' class is added */
        }

    .container {
        background: white; /* Adds contrast if needed */
        border-radius: 12px; /* Rounded corners */
        padding: 20px; /* Adjust padding for better appearance */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Modern shadow effect */
        max-width: 600px; /* Optional, limits the width */
        width: 90%; /* Makes it responsive */
        position: relative;
    }



    /* Modern card styles */
    .modern-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #b08499; /* Light mauve color */
        border-radius: 16px;
        padding: 20px;
        width: 200px;
        height: 150px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        margin: auto;
        text-align: center;
    }

        .modern-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .modern-card-icon {
        background-color: #5e1849; /* Dark purple for the circle */
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
    }

        .modern-card-icon span {
            font-size: 24px;
            color: white;
            font-weight: bold;
        }

    .modern-card-content h5 {
        font-size: 18px;
        font-weight: 600;
        color: #000; /* Black text color */
    }


    nav {
        background-color: white;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        position: sticky;
        top: 0;
        z-index: 1000;
        display: flex;
        opacity: 0;
        align-items: center;
        justify-content: space-between;
        padding: 10px 20px;
        animation: fadeInNavbar 0.6s ease-out forwards;
        transform: translateY(-20px);
    }

    @@keyframes fadeInNavbar {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }


    /* Navbar wrapper for better alignment */
    .nav-wrapper {
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: space-between;
    }

    .tabs, .tabs .tab, .tabs .tab a {
        display: block !important;
        height: auto !important;
    }


    #infinity {
        margin-left: 10px;
        font-weight: bold;
        font-size: 40px;
        color: black;
    }

    #prints {
        font-weight: bold;
        font-size: 40px;
        color: #6f0d4a;
    }

    #signIn {
        font-size: 16px;
        color: black;
        font-weight: bold;
        width: 80px
    }


    .tabs {
        position: relative;
        overflow-x: auto;
        overflow-y: hidden;
        height: 48px;
        width: 100%;
        background-color: white;
        margin: 0 auto;
        white-space: nowrap;
        color: black;
        display: block !important;
        height: 100px !important;
    }

    .nav-content {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        color: black;
    }

    .tabs {
        display: block;
        list-style: none;
        margin: 0;
        padding: 0;
    }

        .tabs .tab {
            display: inline-block;
            text-align: center;
            line-height: 0px;
            height: 50px;
            padding: 10px;
            padding-top: 40px;
            margin: 0;
            text-transform: capitalize;
            transition: all 0.3s ease-in-out;
        }

            .tabs .tab a {
                color: black !important;
                font-size: 16px;
                font-weight: bold;
                text-decoration: none;
                padding: 10px 15px;
                display: block !important;
                height: 50px !important;
            }

            .tabs .tab.active {
                background-color: #6f0d4a !important;
                color: white !important;
                border-radius: 10px; /* Reduce if needed */
                /*padding: 10px 20px;*/ /* Ensure consistent spacing */
            }

                .tabs .tab.active a {
                    color: white !important; /* Ensure text is readable */
                }






    @@media (max-width: 768px) {
        .nav-content .tabs {
            flex-wrap: nowrap;
            -webkit-overflow-scrolling: touch;
            justify-content: flex-start;
        }

            .nav-content .tabs .tab {
                flex-grow: 0;
                min-width: 120px;
            }
    }
</style>

