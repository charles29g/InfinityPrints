                        /*                            border-bottom: solid; */
                        font-weight: bold;
                    }

                    .nav-content .tabs .tab a.active {
                        font-weight: bold;
                        transform: scale(1.1);
                    }

                    .nav-content .tabs .tab a:hover {
                        transform: scale(1.1);
                    }

    .tab.disabled a {
        pointer-events: none;
        color: gray;
        cursor: default;
        text-decoration: none;
    }

    @@media (max-width: 768px) {
        .nav-content .tabs {
            flex-wrap: nowrap;
            -webkit-overflow-scrolling: touch;
            justify-content: flex-start;
        }

            .nav-content .tabs .tab {
                flex-grow: 0;
                min-width: 120px;
            }
    }


    #servicesTxt, #feedbacksTxt {
