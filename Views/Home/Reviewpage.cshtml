    <nav class="nav-extended">
        <div class="nav-wrapper">
            <div>
                <a id="infinity">Infinity</a>
                <a id="prints">Prints</a>
            </div>

            <div class="nav-content">
                <ul class="tabs">
                    <li class="tab"><a ng-click="Homepage()">Home</a></li>
                    <li class="tab"><a ng-click="Servicepage()">Services</a></li>
                    <li class="tab active"><a ng-click="Reviewpage()">Reviews</a></li>
                    <li class="tab"><a ng-click="OrderPage()">Order</a></li>
                    <li class="tab"><a href="#test5">FAQs</a></li>
                    <li class="tab"><a ng-click="About()">About Us</a></li>
                </ul>
                <a id="signIn">Sign In</a>
            </div>
        </div>
    </nav>

    <div class="col s12 m4" style="margin-top:5vh" ng-if="RoleEmp()">
        <div class="modern-card" onclick="openContainer()">
            <div class="modern-card-icon">
                <span>+</span>
            </div>
            <div class="modern-card-content">
                <h5>Add Content</h5>
            </div>
        </div>
    </div>

    <a onclick="window.location.href='/Home/ReviewPageForm'" class="add-review-btn">+ Add Review</a>

    <div class="row center">
        <h3 id="feedbacksTxt"><strong>Feedbacks</strong></h3>
    </div>

    <div class="row" id="feedbacks-section" ng-init="loadContents()">
        <div class="col s12 m4" ng-repeat="DATA in ContentsData">
            <div class="card">
                <div class="action-buttons" ng-if="RoleEmp()">
                    <button class="update-btn" ng-click="editContent(DATA)" onclick="openContainer2()">✎</button>
                    <button class="delete-btn" ng-click="DeleteReviewsEmployee(DATA,'True')">×</button>
                </div>
                <div class="card-feedback-image">
                    <img ng-src={{DATA.IMG_Path}} alt={{DATA.ContName}}>

                </div>
                <div class="card-content">
                    <h5 class="service-title">{{DATA.ContName}}</h5>
                    <label>Description</label>
                    <p>{{DATA.Desc}}</p>
                </div>
            </div>

        </div>
        <div class="centered-container2" style="display:none;">
            <div class="container">
                <button class="close-button" onclick="closeContainer2()">×</button>
                <div class="col s12 " style="padding-left:40px; padding-right:40px">
                    <a class="left" id="txtuser">Update</a>
                    <a class="left" style="margin-left:5px" id="user">Review</a>
                    <div class="row">
                        <form class="col s12" style="margin-top:10px;" name="signUpForm" ng-submit="validateUser()" novalidate>
                            <div class="row">
                                <div class="col s12 image-preview" ng-show="true">
                                    <div class="preview-container">
                                        <!-- Placeholder -->
                                        <div class="placeholder-text" ng-show="!imageSrc">
                                            Upload Image
                                        </div>
                                        <!-- Image Preview -->
                                        <img ng-src="{{imageSrc}}" alt="Image Preview" class="preview-img" ng-show="imageSrc" />
                                    </div>
                                </div>
                                <div class="col s12 file-upload">
                                    <label for="file-upload" class="custom-file-upload">
                                        <i class="material-icons upload-icon">file_upload</i>
                                        Upload Review Image
                                    </label>
                                    <input id="file-upload" type="file" ngf-select ng-model="file" name="file" ngf-change="UploadFile2(file)" accept="image/*" />
                                </div>


                                <div class="col s12 input-icons">
                                    <input id="ContName" class="input-field " type="text" required ng-model="selectedContent.ContName" />
                                </div>

                                <div class="col s12 input-icons">
                                    <input id="Desc" class="input-field " type="text" required ng-model="selectedContent.Desc" />
                                </div>





                            </div>
                        </form>
                        <div class="button">
                            <button class="button1" ng-click="AddContent()">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





    <div class="centered-container" style="display:none;">


        <div class="container">
            <button class="close-button" onclick="closeContainer()">×</button>

            <div class="col s12 m6" style="padding-left:40px; padding-right:40px">

                <a class="left" id="txtuser">New</a>
                <a class="left" style="margin-left:5px" id="user">Review</a>

                <div class="row">

                    <form class="col s12" style="margin-top:10px;" name="signUpForm" ng-submit="validateUser()" novalidate>

                        <div class="row">
                            <div class="col s12 image-preview" ng-show="true">
                                <div class="preview-container">
                                    <!-- Placeholder -->
                                    <div class="placeholder-text" ng-show="!imageSrc">
                                        Upload Image
                                    </div>
                                    <!-- Image Preview -->
                                    <img ng-src="{{imageSrc}}" alt="Image Preview" class="preview-img" ng-show="imageSrc" />


                                </div>
                            </div>
                            <div class="col s12 file-upload">
                                <label for="file-upload4" class="custom-file-upload">
                                    <i class="material-icons upload-icon">file_upload</i>
                                    Upload Review Image
                                </label>
                                <input type="file" id="file-upload4" style="display:none;" ngf-select ng-model="file" name="file" ngf-change="previewImage(file); UploadFile2(file)" accept="image/*" />


                            </div>
                            <div class="col s12 input-icons">

                                <input id="ContName" class="input-field " type="text" placeholder="Review Title" required ng-model="ContName" />

                            </div>

                            <div class="col s12 input-icons">

                                <input id="Desc" class="input-field " type="text" placeholder="Review Description" required ng-model="Desc" />

                            </div>





                        </div>
                    </form>
                    <div class="button">
                        <button class="button1" ng-click="AddContent()">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script>
        function closeContainer() {
            const container = document.querySelector('.centered-container');
            container.style.display = 'none'; // Hides the container
        }

        function openContainer() {
            const container = document.querySelector('.centered-container');
            container.style.display = 'block';
        }


        function openContainer2() {
            console.log("Opening container 2");
            document.querySelector('.centered-container2').classList.add('show');
        }

        function closeContainer2() {
            console.log("Closing container 2");
            document.querySelector('.centered-container2').classList.remove('show');
        }




    </script>

</body>
