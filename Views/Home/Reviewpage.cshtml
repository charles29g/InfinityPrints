    .card {
        border-radius: 15px; /* Smooth corners */
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Lighter shadow */
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transitions */
        background: #fff; /* Clean white background */
        border: 1px solid #e0e0e0; /* Subtle border */
    }

        .card:hover {
            transform: scale(1.03); /* Slight scaling effect */
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15); /* Subtle emphasis on hover */
        }

    .card-image img, .card-feedback-image img {
        width: 100%;
        height: auto; /* Maintain aspect ratio for responsiveness */
        display: block;
        object-fit: cover; /* Ensure the image covers the container */
        aspect-ratio: 16 / 9; /* Balanced aspect ratio */
    }

    .card-content {
        padding: 20px; /* Comfortable spacing */
        color: #333; /* Neutral text color */
        font-family: 'Arial', sans-serif; /* Clean, modern font */
        line-height: 1.6; /* Improved readability */
    }

    .card-title {
        font-size: 1.5rem; /* Slightly larger for prominence */
        font-weight: 600; /* Bold for titles */
        margin-bottom: 10px;
        color: #2c3e50; /* Professional blue-gray tone */
    }

    .card-description {
        font-size: 1rem; /* Standard text size */
        color: #7f8c8d; /* Softer text color for secondary content */
    }

    .card-actions {
        margin-top: 15px;
        display: flex;
        justify-content: flex-end; /* Align actions to the right */
        gap: 10px; /* Spacing between buttons/links */
    }

        .card-actions button, .card-actions a {
            padding: 10px 15px;
            border-radius: 5px;
            background: #3498db; /* Vibrant primary color */
            color: #fff;
            border: none;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.3s ease;
        }

            .card-actions button:hover, .card-actions a:hover {
