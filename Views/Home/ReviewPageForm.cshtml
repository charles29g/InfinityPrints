
@{
    Layout = "~/Views/Shared/_HomepageLayout.cshtml";
}

<style>

    .back-btn {
        position: fixed;
        bottom: 20px;
        left: 20px;
        background: linear-gradient(135deg, #6f0d4a, #9b135f);
        color: white;
        border-radius: 30px;
        font-size: 16px;
        padding: 12px 24px;
        text-decoration: none;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: 4px 6px 10px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease-in-out;
        cursor: pointer;
    }

        .back-btn i {
            font-size: 20px;
        }

        .back-btn:hover {
            background: linear-gradient(135deg, #9b135f, #6f0d4a);
            transform: scale(1.1);
            box-shadow: 6px 8px 12px rgba(0, 0, 0, 0.4);
        }

    .centered-container {
        display: flex;
        justify-self:center;
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        width: 50%;
        position: relative;
        border: 1px ;
        margin-top:30px
    }


    #txtuser {
        font-weight: bold;
        font-size: 20px;
        color: #6f0d4a;
        font-size: 25px;
    }

    #user {
        font-weight: bold;
        font-size: 20px;
        color: black;
        font-size: 25px;
    }

    .preview-container {
        width: 200px;
        height: 200px;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
        position: relative;
        margin-bottom: 20px;
        justify-self: center;
    }

    .preview-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: relative;
        z-index: 2;
    }


    .custom-file-upload {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
        color: #7b2857;
        font-weight: bold;
        text-align: center;
        width: 80%;
        transition: background-color 0.3s;
        margin-bottom: 2vh;
        justify-self: center;
    }

    #ContName {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        width: 80%;
        display: flex;
        justify-self: center
    }

    #Desc {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        width: 80%;
        height: 100px;
        display: flex;
        justify-self: center
    }



    .input-icons {
        width: 100%;
        margin-bottom: 20px;
        color: #6f0d4a;
        position: relative;
    }

    .button1 {
        width: 20%;
        padding: 10px;
        border: none;
        border-radius: 50px;
        background-color: #ac7b99;
        color: white;
        font-size: 14px;
        cursor: pointer;
        display: flex;
        justify-content: center;
        justify-self: center;
    }

        .button1:hover, .button1:focus {
            background-color: #6f0d4a;
        }

    h2 {
        text-align: center;
        font-weight: bold
    }
</style>

<button class="back-btn" onclick="window.location.href='/Home/Reviewpage'">
    <i class="material-icons">arrow_back</i> Back to Reviews
</button>

