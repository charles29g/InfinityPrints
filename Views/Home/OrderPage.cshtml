@{
    Layout = "~/Views/Shared/_HomepageLayout.cshtml";
}


<style>
    .button1 {
        width: 100%; /* Full width for consistency */
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #6f0d4a;
        color: white;
        font-size: 14px;
        cursor: pointer;
    }

    button:hover {
        background-color: #850f5a !important; /* Slightly darker magenta for hover */
    }

    button:active {
        background-color: #6f0d4a !important; /* Keep original magenta for active state */
    }

    button:focus {
        outline: none; /* Disable focus outline */
        background-color: #6f0d4a; /* Same magenta color to prevent unwanted changes */
    }

    .input-field {
        width: 100%; /* Make input fields take full width */
        padding: 10px; /* Add padding for better spacing */
        border: 1px solid #ccc; /* Add consistent border */
        border-radius: 5px; /* Rounded corners */
        margin: 10px 0; /* Add spacing between fields */
        font-size: 14px; /* Set consistent font size */
    }


    .file-upload {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    .custom-file-upload {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
        color: #7b2857; /* Custom purple color */
        font-weight: bold;
        text-align: center;
        width: 100%;
        transition: background-color 0.3s;
        margin-bottom: 2vh;
    }

        .custom-file-upload:hover {
            background-color: #f3e5f5;
        }

    .upload-icon {
        margin-right: 10px;
        color: #7b2857; /* Custom purple color */
    }

    #file-upload {
        display: none;
    }

    /* Center the "Upload Image" Box */
    .image-preview {
        margin: 0 auto; /* Center the image preview box horizontally */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .preview-container {
        width: 200px; /* Square size */
        height: 200px; /* Square size */
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
        position: relative;
        margin-bottom: 20px; /* Add spacing between preview and upload button */
    }

    .placeholder-text {
        color: #999;
        font-size: 16px;
        text-align: center;
        position: absolute;
        z-index: 1;
        pointer-events: none;
    }

    .preview-img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures the image fills the square container while maintaining aspect ratio */
        position: relative;
        z-index: 2;
    }

    .close-button {
        position: absolute;
        top: 10px;
        right: 15px;
        background: none;
        border: none;
        font-size: 20px;
        font-weight: bold;
        cursor: pointer;
        color: #555;
        transition: color 0.2s ease-in-out;
    }



    .centered-container {
        position: fixed; /* Stays in the same position even when scrolling */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* Centers the container */
        width: 100%; /* Adjust based on your layout */
        height: auto; /* Ensure it adapts to content */
        display: flex;
        justify-content: center; /* Horizontal centering */
        align-items: center; /* Vertical centering */
        z-index: 10; /* Ensure it overlaps other content */
    }

    .container {
        background: white; /* Adds contrast if needed */
        border-radius: 12px; /* Rounded corners */
        padding: 20px; /* Adjust padding for better appearance */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Modern shadow effect */
        width: 100%; /* Makes it responsive */
        position: relative;
    }


    nav {
        background-color: white;
        box-shadow: none;
        outline: none;
        border-bottom: 2px solid #6f0d4a;
    }

    .nav-content {
        width: 100%;
        overflow: hidden;
        margin-bottom: 1vh
    }

        .nav-content .tabs {
            display: flex;
            justify-content: space-evenly;
            width: 100%;
            padding-left: 0px;
            margin: 0;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            white-space: nowrap;
        }

            .nav-content .tabs .tab {
                flex-shrink: 0;
                text-align: center;
            }

                .nav-content .tabs .tab a {
                    display: block;
                    padding: 10px 0;
                    font-size: 17px;
                    color: #6f0d4a !important;
                }

                    .nav-content .tabs .tab a:hover,
                    .nav-content .tabs .tab a:focus {
                        color: #6f0d4a;
                    }

    @@media (max-width: 768px) {
        .nav-content .tabs {
            flex-wrap: nowrap;
            -webkit-overflow-scrolling: touch;
            justify-content: flex-start;
        }

            .nav-content .tabs .tab {
                flex-grow: 0;
                min-width: 120px;
            }
    }

    .header {
        background: #9c5c91;
        color: white;
        padding: 20px;
        border-radius: 10px 10px 0 0;
    }

    .form-group, .form-row {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        color: #5a2d5a;
    }

    input, select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    hr {
        border: 1px solid #9c5c91;
    }

    button {
        background: #9c5c91;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button:hover {
            background: #7a3f6a;
        }

    #FileQuantity {
        display: block; /* Ensure it's not hidden */
        width: 100%; /* Make it full width */
        padding: 8px; /* Add padding for better appearance */
        border: 1px solid #ccc; /* Add border */
        border-radius: 5px; /* Rounded corners */
        background-color: white; /* Ensure background is white */
        font-size: 14px; /* Set font size */
    }

        #FileQuantity option:disabled {
            color: #999; /* Gray out the text */
        }

    #Service {
        display: block; /* Ensure it's not hidden */
        width: 100%; /* Make it full width */
        padding: 8px; /* Add padding for better appearance */
        border: 1px solid #ccc; /* Add border */
        border-radius: 5px; /* Rounded corners */
        background-color: white; /* Ensure background is white */
        font-size: 14px; /* Set font size */
    }

        #Service option:disabled {
            color: #999; /* Gray out the text */
        }

    #Size {
        display: block; /* Ensure it's not hidden */
        width: 100%; /* Make it full width */
        padding: 8px; /* Add padding for better appearance */
        border: 1px solid #ccc; /* Add border */
        border-radius: 5px; /* Rounded corners */
        background-color: white; /* Ensure background is white */
        font-size: 14px; /* Set font size */
    }

        #Size option:disabled {
            color: #999; /* Gray out the text */
        }

    #Quantity {
        display: block; /* Ensure it's not hidden */
        width: 100%; /* Make it full width */
        padding: 8px; /* Add padding for better appearance */
        border: 1px solid #ccc; /* Add border */
        border-radius: 5px; /* Rounded corners */
        background-color: white; /* Ensure background is white */
        font-size: 14px; /* Set font size */
    }

        #Quantity option:disabled {
            color: #999; /* Gray out the text */
        }

    #PaymentTerms {
        display: block; /* Ensure it's not hidden */
        width: 100%; /* Make it full width */
        padding: 8px; /* Add padding for better appearance */
        border: 1px solid #ccc; /* Add border */
        border-radius: 5px; /* Rounded corners */
        background-color: white; /* Ensure background is white */
        font-size: 14px; /* Set font size */
    }

        #PaymentTerms option:disabled {
            color: #999; /* Gray out the text */
        }
</style>
<body>
    <nav class="nav-extended">
        <div class="nav-wrapper">
            <div class="row">
                <div class="col s6">
                    <a class="left" id="infinity">Infinity</a>
                    <a class="left" id="prints">Prints</a>
                </div>
                <div class="col s6" style="text-align: right;">
                    <a id="signIn">{{Name}}</a>
                </div>
            </div>
        </div>
        <div class="nav-content">
            <ul class="tabs">
                <li class="tab "><a ng-click="Homepage()">Home</a></li>
                <li class="tab "><a ng-click="Servicepage()">Services</a></li>
                <li class="tab "><a ng-click="Reviewpage()">Reviews</a></li>
                <li class="tab "><a ng-click="OrderPage()" class="active">Order</a></li>
                <li class="tab "><a href="#test5">FAQs</a></li>
                <li class="tab "><a ng-click="About()">About Us</a></li>
            </ul>
        </div>
    </nav>



    <div class="container">
        <div class="header text-center">
            <h1>Order</h1>
        </div>

        <div class="content" ng-init="loadUsers(); loadServices(); loadSizes();">
            <div ng-repeat="pDATA in UsersData | filter:{UserID: UserID} ">

                <h3 class="text-center">User Information</h3>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Company Name</label>
                        <input type="text" class="form-control" ng-model="CompanyName" required />
                    </div>

                    <div class="form-row">
                        <div class="col-md-6">
                            <label>First Name</label>
                            <input type="text" class="form-control" ng-model="pDATA.FName" disabled />
                        </div>
                        <div class="col-md-6">
                            <label>Last Name</label>
                            <input type="text" class="form-control" ng-model="pDATA.LName" disabled />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-6">
                            <label>Mobile Number</label>
                            <input type="text" class="form-control" ng-model="pDATA.PhoneNum" ng-change="PhoneNum()" disabled />
                        </div>
                        <div class="col-md-6">
                            <label>Email</label>
                            <input type="text" class="form-control" ng-model="pDATA.Email" disabled />
                        </div>
                    </div>

                    <hr />

                    <div class="form-group">
                        <label>File Quantity</label>
                        <select id="FileQuantity" required ng-model="FileQuantity" ng-change="updateFileFields()">
                            <option value="0" disabled>Please select One</option>
                            <option value="1" selected>1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>

                    <hr />
                    <h4>File Upload</h4>
                    <input type="file" ngf-select ng-model="file" name="file" ngf-change="UploadFile(file)" accept="image/*" />


                    <div class="form-group">
                        <label>Service</label>
                        <select id="Service" required ng-model="Service">
                            <option value="" selected disabled>Please select One</option>
                            <option ng-repeat="service in ServicesData" value="{{service.ServiceID}}">
                                {{service.ServiceName}}
                            </option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Size</label>
                        <select id="Size" required ng-model="Size">
                            <option value="" selected disabled>Please select One</option>
                            <option ng-repeat="pDATA in sizesData" value="{{size.SizeID}}">
                                {{size.SizeName}}
                            </option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Quantity</label>
                        <select id="Quantity" required ng-model="Quantity">
                            <option value="0" selected disabled>Please select One</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>

                    <h5>Price: </h5>

                    <h6>Additional Notes: </h6>

                    <h3>Total: </h3>

                    <div class="form-group">
                        <label>Payment Terms</label>
                        <select id="PaymentTerms" required ng-model="PaymentTerms">
                            <option value="0" selected disabled>Please select One</option>
                            <option value="FullPayment">Full Payment</option>
                            <option value="Fifty">50/50</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit Order</button>
                </form>
            </div>
        </div>
    </div>
</body>