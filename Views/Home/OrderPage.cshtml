@{
    Layout = "~/Views/Shared/_HomepageLayout.cshtml";
}


<style>
    .button1 {
        width: 100%; /* Full width for consistency */
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #6f0d4a;
        color: white;
        font-size: 14px;
        cursor: pointer;
    }

    button:hover {
        background-color: #850f5a !important; /* Slightly darker magenta for hover */
    }

    button:active {
        background-color: #6f0d4a !important; /* Keep original magenta for active state */
    }

    button:focus {
        outline: none; /* Disable focus outline */
        background-color: #6f0d4a; /* Same magenta color to prevent unwanted changes */
    }

    .input-field {
        width: 100%; /* Make input fields take full width */
        padding: 10px; /* Add padding for better spacing */
        border: 1px solid #ccc; /* Add consistent border */
        border-radius: 5px; /* Rounded corners */
        margin: 10px 0; /* Add spacing between fields */
        font-size: 14px; /* Set consistent font size */
    }


    .file-upload {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    .custom-file-upload {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
        color: #7b2857; /* Custom purple color */
        font-weight: bold;
        text-align: center;
        width: 100%;
        transition: background-color 0.3s;
        margin-bottom: 2vh;
    }

        .custom-file-upload:hover {
            background-color: #f3e5f5;
        }

    .upload-icon {
        margin-right: 10px;
        color: #7b2857; /* Custom purple color */
    }

    #file-upload {
        display: none;
    }

    /* Center the "Upload Image" Box */
    .image-preview {
        margin: 0 auto; /* Center the image preview box horizontally */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .preview-container {
        width: 200px; /* Square size */
        height: 200px; /* Square size */
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
        position: relative;
        margin-bottom: 20px; /* Add spacing between preview and upload button */
    }

    .placeholder-text {
        color: #999;
        font-size: 16px;
        text-align: center;
        position: absolute;
        z-index: 1;
        pointer-events: none;
    }

    .preview-img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures the image fills the square container while maintaining aspect ratio */
        position: relative;
        z-index: 2;
    }

    .close-button {
        position: absolute;
        top: 10px;
        right: 15px;
        background: none;
        border: none;
        font-size: 20px;
        font-weight: bold;
        cursor: pointer;
        color: #555;
        transition: color 0.2s ease-in-out;
    }



    .centered-container {
        position: fixed; /* Stays in the same position even when scrolling */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* Centers the container */
        width: 100%; /* Adjust based on your layout */
        height: auto; /* Ensure it adapts to content */
        display: flex;
        justify-content: center; /* Horizontal centering */
        align-items: center; /* Vertical centering */
        z-index: 10; /* Ensure it overlaps other content */
    }

    .container {
        background: white; /* Adds contrast if needed */
        border-radius: 12px; /* Rounded corners */
        padding: 20px; /* Adjust padding for better appearance */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Modern shadow effect */
        width: 100%; /* Makes it responsive */
        position: relative;
    }


    nav {
        background-color: white;
        box-shadow: none;
        outline: none;
        border-bottom: 2px solid #6f0d4a;
    }

    .nav-content {
        width: 100%;
        overflow: hidden;
        margin-bottom: 1vh
    }

        .nav-content .tabs {
            display: flex;
            justify-content: space-evenly;
            width: 100%;
            padding-left: 0px;
            margin: 0;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            white-space: nowrap;
        }

            .nav-content .tabs .tab {
                flex-shrink: 0;
                text-align: center;
            }

                .nav-content .tabs .tab a {
                    display: block;
                    padding: 10px 0;
                    font-size: 17px;
                    color: #6f0d4a !important;
                }

                    .nav-content .tabs .tab a:hover,
                    .nav-content .tabs .tab a:focus {
                        color: #6f0d4a;
                    }

    @@media (max-width: 768px) {
        .nav-content .tabs {
            flex-wrap: nowrap;
            -webkit-overflow-scrolling: touch;
            justify-content: flex-start;
        }

            .nav-content .tabs .tab {
                flex-grow: 0;
                min-width: 120px;
            }
    }


    .order-page {
        background: url('../../content/images/infinityprintsimg.png');
        padding: 60px;
        color: white;
        font-weight: bold;
        text-align: center;
        font-size: 2rem;
        position: relative;
        border-radius: 50px;
    }

    .order-banner h1 {
        background-color: rgba(0, 0, 0, 0.5);
        display: inline-block;
        padding: 10px 20px;
        border-radius: 10px;
    }

    .user-info-txt {
        font-weight: bold;
        color: #6f0d4a;
        text-align: center;
        margin-top: 30px;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .col {
        flex: 1;
        min-width: 45%;
    }

    label {
        font-weight: bold;
        color: #6f0d4a;
    }

        label .file-upload {
            margin-top: 50px;
        }

    /*    input, select {
        width: 100%;
        padding-left:5px;
        border: 1px solid #ccc;

    }*/

    #companyName, #fname, #lname, #phoneNum, #email3 {
        box-sizing: border-box;
        border: 1px solid;
        border-radius: 5px;
        padding: 5px;
    }



    hr {
        border-bottom: 2px solid #6f0d4a;
        border-top: 0px;
        border-left: 0px;
        border-right: 0px;
        padding-top: 50px;
        width: 100%;
    }

    .file-qty-txt {
        text-align: center;
        font-weight: bold;
        color: #6f0d4a;
        margin-top: 50px;
    }

    button {
        background: #9c5c91;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button:hover {
            background: #7a3f6a;
        }

    #FileQuantity {
        display: block; /* Ensure it's not hidden */
        width: 50%; /* Make it full width */
        padding: 8px; /* Add padding for better appearance */
        border: 1px solid #ccc; /* Add border */
        border-radius: 5px; /* Rounded corners */
        background-color: white; /* Ensure background is white */
        font-size: 14px; /* Set font size */
        justify-self: center;
    }

        #FileQuantity option:disabled {
            color: #999; /* Gray out the text */
        }

    #Service {
        display: block; /* Ensure it's not hidden */
        /*width: 410px;*/ /* Make it full width */
        padding: 8px; /* Add padding for better appearance */
        border: 1px solid #ccc; /* Add border */
        border-radius: 5px; /* Rounded corners */
        background-color: white; /* Ensure background is white */
        font-size: 14px; /* Set font size */
    }

        #Service option:disabled {
            color: #999; /* Gray out the text */
        }

    #Size {
        display: block; /* Ensure it's not hidden */
        /*width: 410px;*/ /* Make it full width */
        padding: 8px; /* Add padding for better appearance */
        border: 1px solid #ccc; /* Add border */
        border-radius: 5px; /* Rounded corners */
        background-color: white; /* Ensure background is white */
        font-size: 14px; /* Set font size */
    }

        #Size option:disabled {
            color: #999; /* Gray out the text */
        }

    #Quantity {
        display: block; /* Ensure it's not hidden */
        /*width: 100%;*/ /* Make it full width */
        padding: 8px; /* Add padding for better appearance */
        border: 1px solid #ccc; /* Add border */
        border-radius: 5px; /* Rounded corners */
        background-color: white; /* Ensure background is white */
        font-size: 14px; /* Set font size */
    }

        #Quantity option:disabled {
            color: #999; /* Gray out the text */
        }

    #PaymentTerms {
        display: block; /* Ensure it's not hidden */
        width: 100%; /* Make it full width */
        padding: 8px; /* Add padding for better appearance */
        border: 1px solid #ccc; /* Add border */
        border-radius: 5px; /* Rounded corners */
        background-color: white; /* Ensure background is white */
        font-size: 14px; /* Set font size */
        justify-self: center
    }

        #PaymentTerms option:disabled {
            color: #999; /* Gray out the text */
        }

    .file-upload-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        /*        width: 50%;*/
        height: 45px;
        border: 1px solid #ccc;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        position: relative;
        box-sizing: border-box;
        padding: 5px;
    }

        .file-upload-container input {
            opacity: 0;
            /*        width: 100%;
        height: 100%;*/
            position: absolute;
            cursor: pointer;
        }

        .file-upload-container i {
            font-size: 16px;
            color: #6f0d4a;
        }

    #file-upload-txt {
        padding-top: 10px;
    }

    h5 {
        font-weight: bold;
        color: #6f0d4a;
    }

    #additional-notes {
        width: 100%;
        height: 200px;
        border-radius: 5px;
    }

    #total {
        color: white;
        font-weight: bold;
        border: 2px solid #6f0d4a;
        border-radius: 50px;
        font-size: 30px;
        padding-left: 20px;
        padding-right: 20px;
        background-color: #6f0d4a;
    }

    .payterms-container {
        width: 50%;
        justify-self: center;
        margin-top: 50px
    }
</style>
<body>
    <nav class="nav-extended">
        <div class="nav-wrapper">
            <div class="row">
                <div class="col s6">
                    <a class="left" id="infinity">Infinity</a>
                    <a class="left" id="prints">Prints</a>
                </div>
                <div class="col s6" style="text-align: right;">
                    <a id="signIn">{{Name}}</a>
                </div>
            </div>
        </div>
        <div class="nav-content">
            <ul class="tabs">
                <li class="tab "><a ng-click="Homepage()">Home</a></li>
                <li class="tab "><a ng-click="Servicepage()">Services</a></li>
                <li class="tab "><a ng-click="Reviewpage()">Reviews</a></li>
                <li class="tab "><a ng-click="OrderPage()" class="active">Order</a></li>
                <li class="tab "><a href="#test5">FAQs</a></li>
                <li class="tab "><a ng-click="About()">About Us</a></li>
            </ul>
        </div>
    </nav>



    <div class="container">
        <div class="order-page">
            <div class="order-banner text-center">
                <h1>Order</h1>
            </div>
        </div>
        <div class="content" ng-init="loadUsers(); loadServices(); ">
            <div ng-repeat="pDATA in UsersData | filter:{UserID: UserID} ">

                <h5 class="user-info-txt">User Information</h5>
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="row">
                            <div class="col s12">
                                <label for="companyName">Company Name</label>
                                <input type="text" class="form-control validate" id="companyName" ng-model="CompanyName" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s6">
                                <label for="fname">First Name</label>
                                <input type="text" class="form-control" id="fname" ng-model="pDATA.FName" disabled />
                            </div>
                            <div class="col s6">
                                <label for="lname">Last Name</label>
                                <input type="text" class="form-control" id="lname" ng-model="pDATA.LName" disabled />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s6">
                                <label for="phoneNum">Mobile Number</label>
                                <input type="text" class="form-control" id="phoneNum" ng-model="pDATA.PhoneNum" ng-change="PhoneNum()" disabled />
                            </div>
                            <div class="col s6">
                                <label for="email3">Email</label>
                                <input type="text" class="form-control" id="email3" ng-model="pDATA.Email" disabled />
                            </div>
                        </div>
                    </div>

                    <hr />


                    <div class="form-group">
                        <p class="file-qty-txt">File Quantity</p>
                        <select id="FileQuantity" required ng-model="FileQuantity" ng-change="updateFileFields()">
                            <option value="0" disabled>Please select One</option>
                            <option value="1" selected>1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                        <p class="center">Example: 1 .pdf and 1 .txt = 2 file</p>
                    </div>

                    <hr />
                    @*<h4>File Upload</h4>
                        <input type="file" ngf-select ng-model="file" name="file" ngf-change="UploadFile(file)" accept="image/*" />*@
                    <div class="upload-container">
                        <div class="row">
                            <div class="col s6" id="file-upload-txt">
                                <label for="file-upload">File Upload </label>
                                <label class="file-upload-container">
                                    <i class="fas fa-upload"></i>
                                    <input id="file-upload" type="file" ngf-select ng-model="file" name="file" ngf-change="UploadFile(file)" accept="image/*" />
                                </label>
                            </div>
                            @*<div class="col s6">
                                    <label>File Upload </label>
                                    <label class="file-upload-container">
                                        <i class="fas fa-upload"></i>
                                        <input type="file" ngf-select ng-model="file" name="file" ngf-change="UploadFile(file)" accept="image/*" />
                                    </label>

                                </div>*@
                        </div>

                        <div class="row">
                            <div class="col s6">
                                <label for="Service">Service</label>
                                <select id="Service" required ng-model="Service">
                                    <option value="" selected disabled>Please select One</option>
                                    <option ng-repeat="service in ServicesData" value="{{service.ServiceID}}">
                                        {{service.ServiceName}}
                                    </option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s6">
                                <label for="Size">Size</label>
                                <select id="Size" required ng-model="Size" ng-init="loadSizes()"
                                        ng-options="size.SizeID as size.SizeName for size in sizesData">

                                    <option value="" selected disabled>Please select One</option>

                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s6">
                                <label for="Quantity">Quantity</label>
                                <select id="Quantity" required ng-model="Quantity">
                                    <option value="0" selected disabled>Please select One</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col center">
                                <h5 class="">Price: </h5>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <h6>Additional Notes:</h6>
                            <textarea id="additional-notes" class="form-control" placeholder="Enter your notes here..."></textarea>
                        </div>
                    </div>
                    <div class="row" style="margin-top:20px">
                        <div class="col s12 center">
                            <span id="total">Total: </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <div class="payterms-container">
                                <label for="PaymentTerms">Payment Terms</label>
                                <select id="PaymentTerms" required ng-model="PaymentTerms">
                                    <option value="0" selected disabled>Please select One</option>
                                    <option value="FullPayment">Full Payment</option>
                                    <option value="Fifty">50/50</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit Order</button>
                </form>
            </div>
        </div>
    </div>
</body>