@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<style>
    .main-content {
        min-height: 0;
    }
</style>
<body>
    <div class="sidebar">
        <h1>Infinity Prints</h1>
        <ul>
            <li style="margin-bottom: 5px;" ng-show="RoleEmp()">
                <a ng-click="DashAdmin()">
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-home " style="font-size: 18px;"></i>
                    </span>
                    Homepage
                </a>
            </li>
            <li ng-show="Customer()" style="margin-bottom: 5px;">
                <a ng-click="Homepage()">
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-home " style="font-size: 18px;"></i>
                    </span>
                    Go Back to Homepage
                </a>
            </li>
            <li style="margin-bottom: 5px;">
                <a ng-click="Account()">

                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-user-circle active" style="font-size: 18px;"></i>
                    </span>
                    Account
                </a>
            </li>
            <li style="margin-bottom: 5px;" ng-show="RoleEmp()">
                <a ng-click="Reviews()">
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-star" style="font-size: 18px;"></i>
                    </span>
                    Reviews
                </a>
            </li>
            <li style="margin-bottom: 5px;" ng-show="RoleEmp()" class="active">
                <a ng-click="Authorization()">
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-shopping-cart" style="font-size: 18px;"></i>
                    </span>
                    Task Authorization
                </a>
            </li>
            <li style="margin-bottom: 5px;" ng-show="RoleEmp()">
                <a ng-click="Orders()" x>
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-box-open" style="font-size: 18px;"></i>
                    </span>
                    Orders
                </a>
            </li>
            <li style="margin-bottom: 5px;" ng-show="RoleEmp()">
                <a ng-click="Users()">
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-users" style="font-size: 18px;"></i>
                    </span>
                    Users
                </a>
            </li>
            <li style="margin-bottom: 5px;" ng-show="RoleEmp()">
                <a ng-click="Payment()">
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-credit-card" style="font-size: 18px;"></i>
                    </span>
                    Payment
                </a>
            </li>
            <li style="margin-bottom: 5px;" ng-show="RoleEmp()">
                <a ng-click="Chat()">
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-comments" style="font-size: 18px;"></i>
                    </span>
                    Chat
                </a>
            </li>
            <li style="margin-bottom: 5px;">
                <a ng-click="UserGuide()">
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-book-open" style="font-size: 18px;"></i>
                    </span>
                    User Guide
                </a>
            </li>
            <li style="margin-bottom: 5px;" ng-show="RoleEmp()">
                <a ng-click="Status()">
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-spinner " style="font-size: 18px;"></i>
                    </span>
                    Status
                </a>
            </li>
            <li style="margin-bottom: 5px;" ng-show="RoleEmp()">
                <a ng-click="Receipts()">
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-receipt" style="font-size: 18px;"></i>
                    </span>
                    Receipts
                </a>
            </li>
            <li style="margin-bottom: 5px;" ng-show="RoleEmp()">
                <a ng-click="Logs()">
                    <span style="display: inline-block; width: 20px; text-align: center; margin-right: 10px;">
                        <i class="fas fa-file-alt" " style="font-size: 18px;"></i>
                    </span>
                    Logs
                </a>
            </li>
        </ul>
        <div class="sidebar-footer">
            <div class="user-info">
                <button class="logout-btn" ng-click="logoutfunc()">
                    <p class="user-name"><i class="fas fa-user-circle"></i> {{ Name }}</p>
                    <i class="fas fa-sign-out-alt"></i>
                </button>

            </div>
        </div>
    </div>

    <div class="main-content">
        <h1 style="font-size: 2.5rem; font-weight: 600; color: #6f0d4a;  text-align: center;">
            Service Deletion Request
        </h1>
        <div class="row white-text m2" ng-init="loadServices()">

            <div class="table-wrapper">
                <table id="myTable" class="display">
                    <thead>
                        <tr>
                            <th>Service ID</th>
                            <th>Service Name</th>
                            <th>Description</th>

                            <th>Delete</th>
                            <th>Deny</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="pDATA in ServicesData | filter:{Request : 'True'}">
                            <td>{{pDATA.ServiceID}}</td>
                            <td>{{pDATA.ServiceName}}</td>
                            <td>{{pDATA.Description}}</td>
                            <td><button ng-click="DeleteServices(pDATA)">Approve</button></td>
                            <td><button ng-click="DeleteServiceEmployee(pDATA,'')">Deny</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="main-content">
        <h1 style="font-size: 2.5rem; font-weight: 600; color: #6f0d4a;  text-align: center;">
            Review Deletion Requests
        </h1>
        <div class="row white-text m2" ng-init="loadContents()">

            <div class="table-wrapper">
                <table id="myTable2" class="display">
                    <thead>
                        <tr>
                            <th>Content ID</th>
                            <th>Content Name</th>
                            <th>Description </th>

                            <th>Delete</th>
                            <th>Deny</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="pDATA in ContentsData | filter:{Request:'True'}">
                            <td>{{pDATA.ContID}}</td>
                            <td>{{pDATA.ContName}}</td>
                            <td>{{pDATA.Desc}}</td>

                            <td><button ng-click="DeleteReviews(pDATA)">Approve</button></td>
                            <td><button ng-click="DeleteReviewsEmployee(pDATA,'')">Deny</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="main-content">
        <h1 style="font-size: 2.5rem; font-weight: 600; color: #6f0d4a;  text-align: center;">
            User Deletion Request
        </h1>
        <div class="row white-text m2" ng-init="loadUsers()">

            <div class="table-wrapper">
                <table id="myTable3" class="display">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Delete</th>
                            <th>Deny</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="pDATA in UsersData | filter:{Request : 'True'}">
                            <td>{{pDATA.UserID}}</td>
                            <td>{{pDATA.FName}}</td>
                            <td>{{pDATA.LName}}</td>
                            <td>{{pDATA.UName}}</td>
                            <td>{{pDATA.Email}}</td>
                            <td>{{pDATA.RoleID}}</td>
                            <td><button ng-click="DeleteAccounts(pDATA,'True')">Approve</button></td>
                            <td><button ng-click="DeleteAccounts(pDATA,'')">Deny</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
